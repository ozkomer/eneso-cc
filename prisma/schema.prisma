// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // URL is configured in prisma.config.ts for migrations
}

// Affiliate Link model (read-only for this service)
model AffiliateLink {
  id          String   @id @default(cuid())
  title       String
  description String?
  originalUrl String   // Original affiliate URL
  shortUrl    String   @unique // Shortened URL slug
  customSlug  String?  @unique // Optional custom slug
  imageUrl    String?  // Product image URL
  
  // Relations
  userId      String
  categoryId  String?
  ecommerceBrandId String?
  
  // Status and tracking
  isActive    Boolean  @default(true)
  clickCount  Int      @default(0)
  
  // Metadata
  tags        String[] // Array of tags
  notes       String?  // Internal notes
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  clicks      Click[]
  
  @@index([shortUrl])
  @@index([isActive])
}

// Click tracking model
model Click {
  id          String   @id @default(cuid())
  linkId      String
  link        AffiliateLink @relation(fields: [linkId], references: [id], onDelete: Cascade)
  
  // Tracking data
  ipAddress   String?
  userAgent   String?
  referrer    String?
  country     String?
  city        String?
  device      String?  // mobile, desktop, tablet
  browser     String?
  
  // Conversion tracking
  converted   Boolean  @default(false)
  
  timestamp   DateTime @default(now())
  
  @@index([linkId])
  @@index([timestamp])
}

// CuratedList model (read-only for this service)
model CuratedList {
  id                String   @id @default(cuid())
  title             String
  slug              String   @unique
  shortUrl          String?  @unique
  description       String?
  coverImage        String?
  youtubeUrl        String?
  isFeatured        Boolean  @default(false)
  showDirectLinks   Boolean  @default(false)
  clickCount        Int      @default(0)
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  listClicks        ListClick[]
  
  @@index([slug])
  @@index([shortUrl])
}

// ListClick tracking model
model ListClick {
  id          String   @id @default(cuid())
  listId      String
  list        CuratedList @relation(fields: [listId], references: [id], onDelete: Cascade)
  listUrlId   String? // Which specific ListUrl was clicked
  
  // Tracking data
  ipAddress   String?
  userAgent   String?
  referrer    String?
  country     String?
  city        String?
  device      String?  // mobile, desktop, tablet
  browser     String?
  
  // Conversion tracking
  converted   Boolean  @default(false)
  
  timestamp   DateTime @default(now())
  
  @@index([listId])
  @@index([listUrlId])
  @@index([timestamp])
}

// CustomLink model (read-only for this service)
model CustomLink {
  id          String   @id @default(cuid())
  title       String
  targetUrl   String   // Direct URL to redirect to
  shortUrl    String   @unique // Shortened URL slug
  description String?
  isActive    Boolean  @default(true)
  clickCount  Int      @default(0)
  
  userId      String
  
  tags        String[]
  notes       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  clicks      CustomLinkClick[]
  
  @@index([shortUrl])
  @@index([isActive])
}

// CustomLinkClick tracking model
model CustomLinkClick {
  id          String   @id @default(cuid())
  customLinkId String
  customLink  CustomLink @relation(fields: [customLinkId], references: [id], onDelete: Cascade)
  
  // Tracking data
  ipAddress   String?
  userAgent   String?
  referrer    String?
  country     String?
  city        String?
  device      String?
  browser     String?
  
  converted   Boolean  @default(false)
  
  timestamp   DateTime @default(now())
  
  @@index([customLinkId])
  @@index([timestamp])
}





